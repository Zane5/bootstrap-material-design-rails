!!!
%html
  %head
    %title Material
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "/bower_components/bootstrap-material-design/dist/css/bootstrap-material-design.css", :rel => "stylesheet"}/
    %link{:href => "/bower_components/bootstrap-material-design/dist/css/ripples.min.css", :rel => "stylesheet"}/
    %link{:href => "//cdn.rawgit.com/FezVrasta/dropdown.js/master/jquery.dropdown.css", :rel => "stylesheet"}/
  %body
    = yield
    %script{:src => "/bower_components/bootstrap-material-design/dist/js/material.min.js"}
    %script{:src => "/bower_components/bootstrap-material-design/dist/js/ripples.min.js"}
    :javascript
      $.material.init();
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/noUiSlider/6.2.0/jquery.nouislider.min.js"}
    %script{:src => "https://cdn.rawgit.com/FezVrasta/dropdown.js/master/jquery.dropdown.js"}
    :javascript
      $("#dropdown-menu select").dropdown();
